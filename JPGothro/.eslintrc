{
   "settings": {
     "ecmascript": 6
  },
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "browser": true,
    "jquery": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "semi": [2, "always"],
    "strict": 0,
    "indent": [2, 4],
    "eqeqeq": 1,
    "quotes": [2, "single"],
    "no-multi-spaces": [1, {
      "exceptions": {
        "VariableDeclarator": true,
        "FunctionExpression": true
      }
    }],
    "key-spacing": [0, {"align": "value"}],
    "no-underscore-dangle": 0
  }
}
